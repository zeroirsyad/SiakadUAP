<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.jadwal.JadwalActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="Jadwal Kuliah"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Tab Layout untuk hari -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabMode="scrollable"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/primary"
        app:tabIndicatorColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!-- ViewPager2 untuk konten jadwal per hari -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_days"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
